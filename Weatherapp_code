    PIN_LCD_RD  != TFT_RD || \
    PIN_LCD_CS  != TFT_CS || \
    PIN_LCD_DC  != TFT_DC || \
    PIN_LCD_RES != TFT_RST || \
    PIN_LCD_D0  != TFT_D0 || \
    PIN_LCD_D1  != TFT_D1 || \
    PIN_LCD_D2  != TFT_D2 || \
    PIN_LCD_D3  != TFT_D3 || \
    PIN_LCD_D4  != TFT_D4 || \
    PIN_LCD_D5  != TFT_D5 || \
    PIN_LCD_D6  != TFT_D6 || \
    PIN_LCD_D7  != TFT_D7 || \
    PIN_LCD_BL  != TFT_BL || \
    TFT_BACKLIGHT_ON != HIGH || \
    170 != TFT_WIDTH || \
    320 != TFT_HEIGHT
#error  "Error! Select Setup206_LilyGo_T_Display_S3.h in User_Setup_Select.h"
#endif

